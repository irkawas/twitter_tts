<div class=row>
  <div class="col-xs-4 col-xs-offset-4">
      
      <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, placeholder: "First and Last Name", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, placeholder: "@username", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :location %><br />
        <%= f.text_field :location, placeholder: "New Orleans, Louisiana", class: "form-control" %>
      </div>

      <div class="field form-group", class: "form-control">
        <%= f.label :bio %><br />
        <%= f.text_field :bio, placeholder: "Tell Us About Yourself", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, placeholder: "name@gmail.com", class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password, class: "form-control" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field form-group"">
        <%= f.label :password_confirmation, class: "form-control" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control"  %>
      </div>

      <div class="actions form-group">
        <%= f.submit "Sign up", class: "form-control" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>
  
  </div>
</div>